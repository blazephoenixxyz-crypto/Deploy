    <script>
        const CONTRACT_ADDRESS = '0x36b4Fe14E1DE330728cdD56b16b7560d9326f372';
        const BASE_CHAIN_ID = '0x2105';
        
        // Tokens priorit√°rios (melhor liquidez)
        const HIGH_PRIORITY_TOKENS = {
            WETH: '0x4200000000000000000000000000000000000006',
            USDC: '0x833589fCD6eDb6E08f4c7C32D4f71b54bdA02913',
            DAI: '0x50c5725949A6F0c72E6C4a641F24049A917DB0Cb'
        };
        
        // Tokens secund√°rios (liquidez m√©dia)
        const SECONDARY_TOKENS = {
            USDbC: '0xd9aAEc86B65D86f6A7B5B1b0c42FFA531710b6CA',
            BRETT: '0x532f27101965dd16442E59d40670FaF5eBB142E4',
            DEGEN: '0x4ed4E862860beD51a9570b96d89aF5E1B0Efefed'
        };
        
        // Fees mais comuns (priorizar)
        const PRIORITY_FEES = [500, 3000]; // 0.05% e 0.3%
        const SECONDARY_FEES = [100, 10000]; // 0.01% e 1%
        
        let provider;
        let userAddress;
        let scannerRunning = false;
        let scannerInterval;
        let scanCount = 0;
        
        function setAmount(value) {
            document.getElementById('amountIn').value = value;
        }
        
        function setProfit(value) {
            document.getElementById('minProfit').value = value;
        }
        
        function addLog(message, type = 'info') {
            const logContainer = document.getElementById('logContainer');
            const time = new Date().toLocaleTimeString('pt-BR', {hour: '2-digit', minute: '2-digit', second: '2-digit'});
            const logClass = `log-${type}`;
            
            const entry = document.createElement('div');
            entry.className = `log-entry ${logClass}`;
            entry.innerHTML = `<span class="log-time">[${time}]</span> ${message}`;
            
            logContainer.insertBefore(entry, logContainer.firstChild);
            
            if (logContainer.children.length > 50) {
                logContainer.removeChild(logContainer.lastChild);
            }
        }
        
        async function connectWallet() {
            const statusDiv = document.getElementById('status');
            const connectBtn = document.getElementById('connectBtn');
            const mainPanel = document.getElementById('mainPanel');
            
            try {
                statusDiv.innerHTML = '<div class="status info">üîÑ Conectando...</div>';
                
                if (typeof window.okxwallet === 'undefined') {
                    throw new Error('OKX Wallet n√£o encontrada!');
                }
                
                const accounts = await window.okxwallet.request({ 
                    method: 'eth_requestAccounts' 
                });
                
                userAddress = accounts[0];
                provider = window.okxwallet;
                
                const chainId = await provider.request({ method: 'eth_chainId' });
                
                if (chainId !== BASE_CHAIN_ID) {
                    statusDiv.innerHTML = '<div class="status info">üîÑ Mudando para Base...</div>';
                    
                    try {
                        await provider.request({
                            method: 'wallet_switchEthereumChain',
                            params: [{ chainId: BASE_CHAIN_ID }],
                        });
                    } catch (switchError) {
                        if (switchError.code === 4902) {
                            await provider.request({
                                method: 'wallet_addEthereumChain',
                                params: [{
                                    chainId: BASE_CHAIN_ID,
                                    chainName: 'Base',
                                    nativeCurrency: { name: 'Ethereum', symbol: 'ETH', decimals: 18 },
                                    rpcUrls: ['https://mainnet.base.org'],
                                    blockExplorerUrls: ['https://basescan.org']
                                }],
                            });
                        } else {
                            throw switchError;
                        }
                    }
                }
                
                statusDiv.innerHTML = `<div class="status success">‚úÖ Conectado: ${userAddress.slice(0, 10)}...</div>`;
                connectBtn.style.display = 'none';
                mainPanel.classList.remove('hidden');
                
                addLog('‚úÖ Wallet conectada', 'success');
                await loadStats();
                
            } catch (error) {
                statusDiv.innerHTML = `<div class="status error">‚ùå ${error.message}</div>`;
                addLog('‚ùå Erro: ' + error.message, 'error');
            }
        }
        
        async function loadStats() {
            try {
                const data = '0x642f7d5e';
                const result = await provider.request({
                    method: 'eth_call',
                    params: [{ to: CONTRACT_ADDRESS, data: data }, 'latest']
                });
                
                const executions = parseInt(result.slice(2, 66), 16);
                const profit = parseInt(result.slice(130, 194), 16);
                
                document.getElementById('totalExec').textContent = executions;
                document.getElementById('totalProfit').textContent = (profit / 1e18).toFixed(4);
                
            } catch (error) {
                console.error('Stats error:', error);
            }
        }
        
        function startScanner() {
            scannerRunning = true;
            document.getElementById('startBtn').classList.add('hidden');
            document.getElementById('stopBtn').classList.remove('hidden');
            
            const statusEl = document.getElementById('scannerStatus');
            statusEl.className = 'scanner-status scanning';
            statusEl.innerHTML = `
                <div class="scanner-icon">‚ö°</div>
                <div class="scanner-text">Scanner Turbo Ativo</div>
                <div class="scanner-subtext">Testando m√∫ltiplas rotas...</div>
            `;
            
            addLog('üöÄ Scanner Turbo iniciado!', 'success');
            
            const interval = parseInt(document.getElementById('scanInterval').value) * 1000;
            scanForOpportunities();
            scannerInterval = setInterval(scanForOpportunities, interval);
        }
        
        function stopScanner() {
            scannerRunning = false;
            clearInterval(scannerInterval);
            
            document.getElementById('stopBtn').classList.add('hidden');
            document.getElementById('startBtn').classList.remove('hidden');
            
            const statusEl = document.getElementById('scannerStatus');
            statusEl.className = 'scanner-status stopped';
            statusEl.innerHTML = `
                <div class="scanner-icon">‚è∏Ô∏è</div>
                <div class="scanner-text">Scanner Parado</div>
                <div class="scanner-subtext">${scanCount} scans realizados</div>
            `;
            
            addLog('‚èπÔ∏è Scanner parado', 'warning');
        }
        
        async function scanForOpportunities() {
            if (!scannerRunning) return;
            
            scanCount++;
            document.getElementById('scanCount').textContent = scanCount;
            
            const routes = generateSmartRoutes();
            addLog(`üîç Scan #${scanCount} - Testando ${routes.length} rotas...`, 'info');
            
            // Testa rotas em paralelo (lotes de 20)
            const batchSize = 20;
            for (let i = 0; i < routes.length; i += batchSize) {
                if (!scannerRunning) break;
                
                const batch = routes.slice(i, i + batchSize);
                const promises = batch.map(route => testRouteFast(route));
                
                try {
                    const results = await Promise.allSettled(promises);
                    
                    for (let j = 0; j < results.length; j++) {
                        const result = results[j];
                        if (result.status === 'fulfilled' && result.value.profitable) {
                            const route = batch[j];
                            addLog(`üí∞ OPORTUNIDADE! ${route.path}`, 'success');
                            await executeArbitrage(route);
                            return; // Para ap√≥s executar
                        }
                    }
                } catch (error) {
                    // Continua
                }
            }
            
            addLog(`‚úì Scan #${scanCount} completo`, 'info');
        }
        
        function generateSmartRoutes() {
            const routes = [];
            const allTokens = {...HIGH_PRIORITY_TOKENS, ...SECONDARY_TOKENS};
            const tokenAddresses = Object.values(allTokens);
            
            // Rotas priorit√°rias: WETH como base
            const weth = HIGH_PRIORITY_TOKENS.WETH;
            const highPriorityAddrs = Object.values(HIGH_PRIORITY_TOKENS);
            
            // 1. Rotas com WETH + tokens de alta prioridade
            for (let i = 0; i < highPriorityAddrs.length; i++) {
                for (let j = 0; j < highPriorityAddrs.length; j++) {
                    if (i === j) continue;
                    const tokenB = highPriorityAddrs[i];
                    const tokenC = highPriorityAddrs[j];
                    if (tokenB === weth || tokenC === weth) continue;
                    
                    for (const fee1 of PRIORITY_FEES) {
                        for (const fee2 of PRIORITY_FEES) {
                            for (const fee3 of PRIORITY_FEES) {
                                routes.push({
                                    tokenA: weth,
                                    tokenB,
                                    tokenC,
                                    fee1, fee2, fee3,
                                    path: `${getTokenName(weth)}‚Üí${getTokenName(tokenB)}‚Üí${getTokenName(tokenC)}`,
                                    priority: 1
                                });
                            }
                        }
                    }
                }
            }
            
            // 2. Rotas com tokens secund√°rios (limitadas)
            const secondaryAddrs = Object.values(SECONDARY_TOKENS);
            for (let i = 0; i < secondaryAddrs.length; i++) {
                const tokenB = secondaryAddrs[i];
                for (const tokenC of highPriorityAddrs) {
                    if (tokenC === weth) continue;
                    
                    for (const fee of [500, 3000]) {
                        routes.push({
                            tokenA: weth,
                            tokenB,
                            tokenC,
                            fee1: fee,
                            fee2: fee,
                            fee3: fee,
                            path: `WETH‚Üí${getTokenName(tokenB)}‚Üí${getTokenName(tokenC)}`,
                            priority: 2
                        });
                    }
                }
            }
            
            // Embaralha mantendo prioridade
            return routes.sort((a, b) => {
                if (a.priority !== b.priority) return a.priority - b.priority;
                return Math.random() - 0.5;
            }).slice(0, 100); // Limita a 100 rotas
        }
        
        function getTokenName(address) {
            const allTokens = {...HIGH_PRIORITY_TOKENS, ...SECONDARY_TOKENS};
            for (const [name, addr] of Object.entries(allTokens)) {
                if (addr.toLowerCase() === address.toLowerCase()) return name;
            }
            return 'TKN';
        }
        
        async function testRouteFast(route) {
            try {
                const amountIn = document.getElementById('amountIn').value;
                const minProfitPct = document.getElementById('minProfit').value;
                
                const amountInFloat = parseFloat(amountIn) * 1e18;
                const amountInWei = BigInt(Math.floor(amountInFloat));
                const minProfitFloat = amountInFloat * parseFloat(minProfitPct) / 100;
                const minProfitWei = BigInt(Math.floor(minProfitFloat));
                
                const data = encodeExecute(
                    route.tokenA, amountInWei, route.tokenB,
                    route.fee1, route.fee2, route.fee3,
                    route.tokenC, minProfitWei
                );
                
                const gasEstimate = await Promise.race([
                    provider.request({
                        method: 'eth_estimateGas',
                        params: [{
                            from: userAddress,
                            to: CONTRACT_ADDRESS,
                            data: data,
                            value: route.tokenA === HIGH_PRIORITY_TOKENS.WETH ? '0x' + amountInWei.toString(16) : '0x0'
                        }]
                    }),
                    new Promise((_, reject) => setTimeout(() => reject(new Error('timeout')), 2000))
                ]);
                
                return { profitable: true, gasEstimate };
            } catch (error) {
                return { profitable: false };
            }
        }
        
        async function executeArbitrage(route) {
            try {
                addLog(`‚ö° Executando...`, 'info');
                
                const amountIn = document.getElementById('amountIn').value;
                const minProfitPct = document.getElementById('minProfit').value;
                
                const amountInFloat = parseFloat(amountIn) * 1e18;
                const amountInWei = BigInt(Math.floor(amountInFloat));
                const minProfitFloat = amountInFloat * parseFloat(minProfitPct) / 100;
                const minProfitWei = BigInt(Math.floor(minProfitFloat));
                
                const data = encodeExecute(
                    route.tokenA, amountInWei, route.tokenB,
                    route.fee1, route.fee2, route.fee3,
                    route.tokenC, minProfitWei
                );
                
                const gasEstimate = await provider.request({
                    method: 'eth_estimateGas',
                    params: [{
                        from: userAddress,
                        to: CONTRACT_ADDRESS,
                        data: data,
                        value: route.tokenA === HIGH_PRIORITY_TOKENS.WETH ? '0x' + amountInWei.toString(16) : '0x0'
                    }]
                });
                
                const gasEstimateNum = parseInt(gasEstimate, 16);
                const gasWithBuffer = Math.floor(gasEstimateNum * 1.2);
                const gasHex = '0x' + gasWithBuffer.toString(16);
                
                const txHash = await provider.request({
                    method: 'eth_sendTransaction',
                    params: [{
                        from: userAddress,
                        to: CONTRACT_ADDRESS,
                        data: data,
                        gas: gasHex,
                        value: route.tokenA === HIGH_PRIORITY_TOKENS.WETH ? '0x' + amountInWei.toString(16) : '0x0'
                    }]
                });
                
                addLog(`üì§ TX: ${txHash.slice(0, 15)}...`, 'info');
                
                let receipt = null;
                let attempts = 0;
                while (!receipt && attempts < 30) {
                    await new Promise(r => setTimeout(r, 2000));
                    receipt = await provider.request({
                        method: 'eth_getTransactionReceipt',
                        params: [txHash]
                    });
                    attempts++;
                }
                
                if (receipt && receipt.status === '0x1') {
                    addLog(`üéâ SUCESSO! TX confirmada!`, 'success');
                    await loadStats();
                } else {
                    addLog(`‚ùå TX falhou`, 'error');
                }
                
            } catch (error) {
                addLog(`‚ùå Erro: ${error.message}`, 'error');
            }
        }
        
        function encodeExecute(tokenA, amountIn, tokenB, fee1, fee2, fee3, tokenC, minProfit) {
            let e = '0x28637f4a';
            e += tokenA.slice(2).padStart(64, '0');
            e += amountIn.toString(16).padStart(64, '0');
            e += tokenB.slice(2).padStart(64, '0');
            e += fee1.toString(16).padStart(64, '0');
            e += fee2.toString(16).padStart(64, '0');
            e += fee3.toString(16).padStart(64, '0');
            e += tokenC.slice(2).padStart(64, '0');
            e += minProfit.toString(16).padStart(64, '0');
            return e;
        }
        
        window.addEventListener('load', () => {
            if (typeof window.okxwallet !== 'undefined') {
                document.getElementById('status').innerHTML = 
                    '<div class="status info">‚úÖ OKX Wallet OK!</div>';
            } else {
                document.getElementById('status').innerHTML = 
                    '<div class="status error">‚ö†Ô∏è OKX Wallet n√£o encontrada</div>';
            }
        });
