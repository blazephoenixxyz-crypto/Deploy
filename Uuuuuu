    <script>
        // ============= CONFIGURA√á√ïES =============
        const CONFIG = {
            CHAIN_ID: 42161, // Arbitrum One
            CONTRACT_ADDRESS: '0xc7cb7192953d3db51fe27cc577a7cf689ac3eed3',
            RPC_URL: 'https://arb1.arbitrum.io/rpc',
            
            TOKENS: {
                USDC: {
                    address: '0xaf88d065e77c8cC2239327C5EDb3A432268e5831',
                    decimals: 6,
                    symbol: 'USDC'
                },
                USDT: {
                    address: '0xFd086bC7CD5C481DCC9C85ebE478A1C0b69FCbb9',
                    decimals: 6,
                    symbol: 'USDT'
                },
                WETH: {
                    address: '0x82aF49447D8a07e3bd95BD0d56f35241523fBab1',
                    decimals: 18,
                    symbol: 'WETH'
                },
                DAI: {
                    address: '0xDA10009cBd5D07dd0CeCc66161FC93D7c9000da1',
                    decimals: 18,
                    symbol: 'DAI'
                }
            }
        };

        // ABI do Contrato
        const CONTRACT_ABI = [
            {
                "inputs": [],
                "name": "AAVE_POOL",
                "outputs": [{"internalType": "address", "name": "", "type": "address"}],
                "stateMutability": "view",
                "type": "function"
            },
            {
                "inputs": [{"internalType": "address", "name": "token", "type": "address"}],
                "name": "getBalance",
                "outputs": [{"internalType": "uint256", "name": "", "type": "uint256"}],
                "stateMutability": "view",
                "type": "function"
            },
            {
                "inputs": [],
                "name": "owner",
                "outputs": [{"internalType": "address", "name": "", "type": "address"}],
                "stateMutability": "view",
                "type": "function"
            },
            {
                "inputs": [
                    {"internalType": "address", "name": "token", "type": "address"},
                    {"internalType": "uint256", "name": "amount", "type": "uint256"},
                    {"internalType": "bytes", "name": "params", "type": "bytes"}
                ],
                "name": "startFlashloan",
                "outputs": [],
                "stateMutability": "nonpayable",
                "type": "function"
            },
            {
                "inputs": [{"internalType": "address", "name": "token", "type": "address"}],
                "name": "withdraw",
                "outputs": [],
                "stateMutability": "nonpayable",
                "type": "function"
            },
            {
                "anonymous": false,
                "inputs": [{"indexed": false, "internalType": "uint256", "name": "amount", "type": "uint256"}],
                "name": "Profit",
                "type": "event"
            }
        ];

        // ABI do ERC20
        const ERC20_ABI = [
            {
                "constant": true,
                "inputs": [{"name": "_owner", "type": "address"}],
                "name": "balanceOf",
                "outputs": [{"name": "balance", "type": "uint256"}],
                "type": "function"
            }
        ];

        // ============= VARI√ÅVEIS GLOBAIS =============
        let provider;
        let signer;
        let contract;
        let userAddress;
        let selectedWithdrawToken = 'USDC';

        // ============= FUN√á√ïES DE CONEX√ÉO =============
        async function connectWallet() {
            try {
                if (typeof window.ethereum === 'undefined') {
                    addLog('‚ùå MetaMask n√£o detectada! Instale a extens√£o.', 'error');
                    alert('Por favor, instale a MetaMask!');
                    return;
                }

                addLog('üîå Conectando √† carteira...', 'info');

                // Solicitar contas
                const accounts = await window.ethereum.request({ 
                    method: 'eth_requestAccounts' 
                });

                // Configurar provider e signer
                provider = new ethers.providers.Web3Provider(window.ethereum);
                signer = provider.getSigner();
                userAddress = await signer.getAddress();

                // Verificar rede
                const network = await provider.getNetwork();
                if (network.chainId !== CONFIG.CHAIN_ID) {
                    document.getElementById('networkAlert').style.display = 'block';
                    addLog('‚ö†Ô∏è Rede incorreta! Mudando para Arbitrum...', 'warning');
                    await switchToArbitrum();
                    return;
                }

                // Inicializar contrato
                contract = new ethers.Contract(
                    CONFIG.CONTRACT_ADDRESS,
                    CONTRACT_ABI,
                    signer
                );

                // Atualizar UI
                updateConnectionStatus(true);
                addLog(`‚úÖ Conectado: ${userAddress.slice(0, 6)}...${userAddress.slice(-4)}`, 'success');

                // Verificar se √© o owner
                await checkOwnership();

                // Carregar saldos
                await refreshBalances();

            } catch (error) {
                addLog(`‚ùå Erro ao conectar: ${error.message}`, 'error');
                console.error(error);
            }
        }

        async function switchToArbitrum() {
            try {
                await window.ethereum.request({
                    method: 'wallet_switchEthereumChain',
                    params: [{ chainId: '0xa4b1' }], // 42161 em hex
                });
                addLog('‚úÖ Rede mudada para Arbitrum!', 'success');
                document.getElementById('networkAlert').style.display = 'none';
                await connectWallet();
            } catch (error) {
                if (error.code === 4902) {
                    // Rede n√£o adicionada, adicionar
                    await addArbitrumNetwork();
                } else {
                    addLog(`‚ùå Erro ao mudar rede: ${error.message}`, 'error');
                }
            }
        }

        async function addArbitrumNetwork() {
            try {
                await window.ethereum.request({
                    method: 'wallet_addEthereumChain',
                    params: [{
                        chainId: '0xa4b1',
                        chainName: 'Arbitrum One',
                        nativeCurrency: {
                            name: 'Ethereum',
                            symbol: 'ETH',
                            decimals: 18
                        },
                        rpcUrls: ['https://arb1.arbitrum.io/rpc'],
                        blockExplorerUrls: ['https://arbiscan.io/']
                    }]
                });
                await connectWallet();
            } catch (error) {
                addLog(`‚ùå Erro ao adicionar Arbitrum: ${error.message}`, 'error');
            }
        }

        async function checkOwnership() {
            try {
                const owner = await contract.owner();
                if (owner.toLowerCase() === userAddress.toLowerCase()) {
                    addLog('üëë Voc√™ √© o owner do contrato!', 'success');
                } else {
                    addLog(`‚ö†Ô∏è Owner do contrato: ${owner.slice(0, 6)}...${owner.slice(-4)}`, 'warning');
                }
            } catch (error) {
                addLog(`‚ùå Erro ao verificar owner: ${error.message}`, 'error');
            }
        }

        // ============= FUN√á√ïES DE SALDO =============
        async function refreshBalances() {
            if (!contract) {
                addLog('‚ö†Ô∏è Conecte sua carteira primeiro!', 'warning');
                return;
            }

            try {
                addLog('üîÑ Atualizando saldos...', 'info');

                for (const [symbol, token] of Object.entries(CONFIG.TOKENS)) {
                    try {
                        const balance = await contract.getBalance(token.address);
                        const formatted = ethers.utils.formatUnits(balance, token.decimals);
                        
                        const elementId = `${symbol.toLowerCase()}Balance`;
                        const element = document.getElementById(elementId);
                        if (element) {
                            element.textContent = parseFloat(formatted).toFixed(
                                token.decimals === 18 ? 4 : 2
                            );
                        }

                        addLog(`üí∞ ${symbol}: ${formatted}`, 'success');
                    } catch (error) {
                        addLog(`‚ùå Erro ao ler ${symbol}: ${error.message}`, 'error');
                    }
                }

                // Atualizar saldo do token selecionado para saque
                updateWithdrawableAmount();

            } catch (error) {
                addLog(`‚ùå Erro ao atualizar saldos: ${error.message}`, 'error');
            }
        }

        async function updateWithdrawableAmount() {
            if (!contract || !selectedWithdrawToken) return;

            try {
                const token = CONFIG.TOKENS[selectedWithdrawToken];
                const balance = await contract.getBalance(token.address);
                const formatted = ethers.utils.formatUnits(balance, token.decimals);
                
                document.getElementById('withdrawableAmount').value = 
                    `${formatted} ${selectedWithdrawToken}`;
            } catch (error) {
                console.error('Erro ao atualizar saldo sac√°vel:', error);
            }
        }

        // ============= FUN√á√ïES DE WITHDRAW =============
        function selectWithdrawToken(symbol) {
            selectedWithdrawToken = symbol;
            
            // Atualizar UI
            document.querySelectorAll('.token-btn').forEach(btn => {
                btn.classList.remove('active');
            });
            event.target.classList.add('active');

            updateWithdrawableAmount();
            addLog(`üéØ Token selecionado: ${symbol}`, 'info');
        }

        async function withdrawTokens() {
            if (!contract) {
                addLog('‚ö†Ô∏è Conecte sua carteira primeiro!', 'warning');
                return;
            }

            if (!selectedWithdrawToken) {
                addLog('‚ö†Ô∏è Selecione um token!', 'warning');
                return;
            }

            try {
                const token = CONFIG.TOKENS[selectedWithdrawToken];
                
                // Verificar saldo
                const balance = await contract.getBalance(token.address);
                if (balance.isZero()) {
                    addLog(`‚ö†Ô∏è Sem saldo de ${selectedWithdrawToken} para sacar`, 'warning');
                    return;
                }

                const formatted = ethers.utils.formatUnits(balance, token.decimals);
                addLog(`üí∏ Iniciando saque de ${formatted} ${selectedWithdrawToken}...`, 'info');

                // Executar withdraw
                const tx = await contract.withdraw(token.address);
                addLog(`üìù Transa√ß√£o enviada: ${tx.hash}`, 'info');
                addLog('‚è≥ Aguardando confirma√ß√£o...', 'info');

                const receipt = await tx.wait();
                
                if (receipt.status === 1) {
                    addLog(`‚úÖ Saque confirmado! ${formatted} ${selectedWithdrawToken}`, 'success');
                    addLog(`üîó TX: ${tx.hash.slice(0, 10)}...`, 'info');
                    
                    // Atualizar saldos
                    setTimeout(() => refreshBalances(), 2000);
                } else {
                    addLog('‚ùå Transa√ß√£o falhou!', 'error');
                }

            } catch (error) {
                addLog(`‚ùå Erro no saque: ${error.message}`, 'error');
                console.error(error);
            }
        }

        // ============= FUN√á√ïES DE FLASHLOAN =============
        async function executeFlashloan() {
            if (!contract) {
                addLog('‚ö†Ô∏è Conecte sua carteira primeiro!', 'warning');
                return;
            }

            try {
                // Coletar par√¢metros
                const flashToken = document.getElementById('flashloanToken').value;
                const amount = document.getElementById('flashloanAmount').value;
                const intermediateToken = document.getElementById('intermediateToken').value;
                const router1Select = document.getElementById('router1').value;
                const router2Select = document.getElementById('router2').value;
                const minProfit = document.getElementById('minProfit').value;

                // Valida√ß√µes
                if (!amount || parseFloat(amount) <= 0) {
                    addLog('‚ö†Ô∏è Insira uma quantidade v√°lida!', 'warning');
                    return;
                }

                if (!minProfit || parseFloat(minProfit) <= 0) {
                    addLog('‚ö†Ô∏è Insira um lucro m√≠nimo v√°lido!', 'warning');
                    return;
                }

                // Resolver endere√ßos dos routers
                let router1Addr = router1Select;
                let router2Addr = router2Select;

                if (router1Select === 'CUSTOM') {
                    router1Addr = document.getElementById('router1Custom').value;
                    if (!ethers.utils.isAddress(router1Addr)) {
                        addLog('‚ö†Ô∏è Endere√ßo do Router 1 inv√°lido!', 'warning');
                        return;
                    }
                }

                if (router2Select === 'CUSTOM') {
                    router2Addr = document.getElementById('router2Custom').value;
                    if (!ethers.utils.isAddress(router2Addr)) {
                        addLog('‚ö†Ô∏è Endere√ßo do Router 2 inv√°lido!', 'warning');
                        return;
                    }
                }

                const tokenConfig = CONFIG.TOKENS[flashToken];
                const intermediateConfig = CONFIG.TOKENS[intermediateToken];

                // Converter valores
                const amountWei = ethers.utils.parseUnits(amount, tokenConfig.decimals);
                const minProfitWei = ethers.utils.parseUnits(minProfit, tokenConfig.decimals);

                // Codificar par√¢metros
                const params = ethers.utils.defaultAbiCoder.encode(
                    ['tuple(address,address,address,address,uint256)'],
                    [[
                        router1Addr,
                        router2Addr,
                        tokenConfig.address,
                        intermediateConfig.address,
                        minProfitWei
                    ]]
                );

                addLog('‚ö° Iniciando flashloan arbitrage...', 'info');
                addLog(`üí∞ Token: ${flashToken} | Quantidade: ${amount}`, 'info');
                addLog(`üîÑ ${flashToken} ‚Üí ${intermediateToken} ‚Üí ${flashToken}`, 'info');

                // Executar
                const tx = await contract.startFlashloan(
                    tokenConfig.address,
                    amountWei,
                    params,
                    {
                        gasLimit: 1000000 // 1M gas limit
                    }
                );

                addLog(`üìù TX enviada: ${tx.hash}`, 'info');
                addLog('‚è≥ Aguardando confirma√ß√£o...', 'info');

                const receipt = await tx.wait();

                if (receipt.status === 1) {
                    addLog('‚úÖ Arbitragem executada com sucesso!', 'success');
                    
                    // Procurar evento Profit
                    const profitEvent = receipt.logs.find(log => {
                        try {
                            const parsed = contract.interface.parseLog(log);
                            return parsed.name === 'Profit';
                        } catch {
                            return false;
                        }
                    });

                    if (profitEvent) {
                        const parsed = contract.interface.parseLog(profitEvent);
                        const profit = ethers.utils.formatUnits(
                            parsed.args.amount,
                            tokenConfig.decimals
                        );
                        addLog(`üíµ LUCRO: ${profit} ${flashToken}`, 'success');
                    }

                    // Atualizar saldos
                    setTimeout(() => refreshBalances(), 3000);
                } else {
                    addLog('‚ùå Transa√ß√£o falhou!', 'error');
                }

            } catch (error) {
                addLog(`‚ùå ERRO: ${error.message}`, 'error');
                
                if (error.message.includes('No profit')) {
                    addLog('‚ö†Ô∏è Sem lucro suficiente nesta oportunidade', 'warning');
                } else if (error.message.includes('Profit too low')) {
                    addLog('‚ö†Ô∏è Lucro abaixo do m√≠nimo configurado', 'warning');
                }
                
                console.error(error);
            }
        }

        // ============= FUN√á√ïES DE UI =============
        function updateConnectionStatus(connected) {
            const statusEl = document.getElementById('connectionStatus');
            const walletEl = document.getElementById('walletAddress');
            const btnEl = document.getElementById('connectBtn');

            if (connected) {
                statusEl.className = 'status-badge connected';
                statusEl.innerHTML = '‚úÖ Conectado';
                walletEl.textContent = `${userAddress.slice(0, 6)}...${userAddress.slice(-4)}`;
                btnEl.textContent = 'Conectado';
                btnEl.disabled = true;
            } else {
                statusEl.className = 'status-badge disconnected';
                statusEl.innerHTML = '‚ö†Ô∏è N√£o Conectado';
                walletEl.textContent = 'Conecte sua carteira';
                btnEl.textContent = 'Conectar Wallet';
                btnEl.disabled = false;
            }
        }

        function addLog(message, type = 'info') {
            const logContainer = document.getElementById('logContainer');
            const timestamp = new Date().toLocaleTimeString('pt-BR');
            const logEntry = document.createElement('div');
            logEntry.className = `log-entry ${type}`;
            logEntry.textContent = `[${timestamp}] ${message}`;
            logContainer.appendChild(logEntry);
            logContainer.scrollTop = logContainer.scrollHeight;
        }

        function clearLogs() {
            document.getElementById('logContainer').innerHTML = 
                '<div class="log-entry info">Logs limpos.</div>';
        }

        // ============= EVENT LISTENERS =============
        document.getElementById('router1').addEventListener('change', (e) => {
            document.getElementById('router1Custom').style.display = 
                e.target.value === 'CUSTOM' ? 'block' : 'none';
        });

        document.getElementById('router2').addEventListener('change', (e) => {
            document.getElementById('router2Custom').style.display = 
                e.target.value === 'CUSTOM' ? 'block' : 'none';
        });

        document.getElementById('flashloanAmount').addEventListener('input', (e) => {
            const amount = parseFloat(e.target.value) || 0;
            const fee = amount * 0.0009;
            document.getElementById('totalCost').textContent = fee.toFixed(2);
            document.getElementById('breakEven').textContent = (fee * 1.1).toFixed(2);
        });

        // Detectar mudan√ßa de conta ou rede
        if (window.ethereum) {
            window.ethereum.on('accountsChanged', (accounts) => {
                if (accounts.length === 0) {
                    updateConnectionStatus(false);
                    addLog('‚ö†Ô∏è Carteira desconectada', 'warning');
                } else {
                    window.location.reload();
                }
            });

            window.ethereum.on('chainChanged', () => {
                window.location.reload();
            });
        }

        // ============= INICIALIZA√á√ÉO =============
        window.addEventListener('load', () => {
            addLog('üöÄ Sistema carregado. Conecte sua carteira para come√ßar.', 'info');
            addLog(`üìç Contrato: ${CONFIG.CONTRACT_ADDRESS}`, 'info');
        });
    </script>
</body>
</html>
