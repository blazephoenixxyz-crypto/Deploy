    <script>
        const CONTRACT_ADDR = '0xc7cb7192953d3db51fe27cc577a7cf689ac3eed3';
        const ABI = [{"inputs":[],"stateMutability":"nonpayable","type":"constructor"},{"anonymous":false,"inputs":[{"indexed":false,"internalType":"uint256","name":"amount","type":"uint256"}],"name":"Profit","type":"event"},{"inputs":[],"name":"AAVE_POOL","outputs":[{"internalType":"address","name":"","type":"address"}],"stateMutability":"view","type":"function"},{"inputs":[{"internalType":"address","name":"asset","type":"address"},{"internalType":"uint256","name":"amount","type":"uint256"},{"internalType":"uint256","name":"premium","type":"uint256"},{"internalType":"address","name":"initiator","type":"address"},{"internalType":"bytes","name":"params","type":"bytes"}],"name":"executeOperation","outputs":[{"internalType":"bool","name":"","type":"bool"}],"stateMutability":"nonpayable","type":"function"},{"inputs":[{"internalType":"address","name":"token","type":"address"}],"name":"getBalance","outputs":[{"internalType":"uint256","name":"","type":"uint256"}],"stateMutability":"view","type":"function"},{"inputs":[],"name":"owner","outputs":[{"internalType":"address","name":"","type":"address"}],"stateMutability":"view","type":"function"},{"inputs":[{"internalType":"address","name":"token","type":"address"},{"internalType":"uint256","name":"amount","type":"uint256"},{"internalType":"bytes","name":"params","type":"bytes"}],"name":"startFlashloan","outputs":[],"stateMutability":"nonpayable","type":"function"},{"inputs":[{"internalType":"address","name":"token","type":"address"}],"name":"withdraw","outputs":[],"stateMutability":"nonpayable","type":"function"}];
        
        // TOKENS ARBITRUM
        const TOKENS = {
            WETH: { addr: '0x82aF49447D8a07e3bd95BD0d56f35241523fBab1', decimals: 18, symbol: 'WETH' },
            USDC: { addr: '0xaf88d065e77c8cC2239327C5EDb3A432268e5831', decimals: 6, symbol: 'USDC' },
            USDT: { addr: '0xFd086bC7CD5C481DCC9C85ebE478A1C0b69FCbb9', decimals: 6, symbol: 'USDT' },
            ARB: { addr: '0x912CE59144191C1204E64559FE8253a0e49E6548', decimals: 18, symbol: 'ARB' },
            DAI: { addr: '0xDA10009cBd5D07dd0CeCc66161FC93D7c9000da1', decimals: 18, symbol: 'DAI' }
        };
        
        // UNISWAP V3 QUOTER ARBITRUM
        const QUOTER = '0xb27308f9F90D607463bb33eA1BeBb41C27CE5AB6';
        const QUOTER_ABI = [{"inputs":[{"internalType":"bytes","name":"path","type":"bytes"},{"internalType":"uint256","name":"amountIn","type":"uint256"}],"name":"quoteExactInput","outputs":[{"internalType":"uint256","name":"amountOut","type":"uint256"}],"stateMutability":"nonpayable","type":"function"}];
        
        // ROUTERS
        const UNI_ROUTER = '0x68b3465833fb72A70ecDF485E0e4C7bD8665Fc45';
        const SUSHI_ROUTER = '0x1b02dA8Cb0d097eB8D57A175b88c7D8b47997506';
        
        let web3, account, contract, quoter;
        let running = false;
        let scanCount = 0;
        let oppCount = 0;
        let totalProfit = 0;
        
        async function connect() {
            try {
                if (!window.ethereum) {
                    alert('‚ùå Carteira n√£o encontrada!');
                    return;
                }
                
                updateStatus('Conectando...', 'scanning');
                
                web3 = new Web3(window.ethereum);
                const accounts = await window.ethereum.request({ method: 'eth_requestAccounts' });
                account = accounts[0];
                
                const chainId = await web3.eth.getChainId();
                if (Number(chainId) !== 42161) {
                    await window.ethereum.request({
                        method: 'wallet_switchEthereumChain',
                        params: [{ chainId: '0xa4b1' }]
                    });
                }
                
                contract = new web3.eth.Contract(ABI, CONTRACT_ADDR);
                quoter = new web3.eth.Contract(QUOTER_ABI, QUOTER);
                
                const owner = await contract.methods.owner().call();
                if (owner.toLowerCase() !== account.toLowerCase()) {
                    alert('‚ö†Ô∏è Voc√™ n√£o √© o owner!');
                    return;
                }
                
                updateStatus('Online', 'connected');
                document.getElementById('connectBtn').style.display = 'none';
                document.getElementById('mainPanel').style.display = 'block';
                document.getElementById('logsPanel').style.display = 'block';
                
                log('‚úÖ Connected: ' + account.substring(0, 6) + '...' + account.substring(38), 'success');
                
            } catch (e) {
                updateStatus('Error', 'error');
                log('‚ùå ' + e.message, 'error');
            }
        }
        
        async function start() {
            running = true;
            document.getElementById('startBtn').style.display = 'none';
            document.getElementById('stopBtn').style.display = 'block';
            document.getElementById('statsPanel').style.display = 'block';
            document.getElementById('oppsPanel').style.display = 'block';
            
            updateStatus('Scanning...', 'scanning');
            log('üöÄ Scanner iniciado', 'info');
            
            scan();
        }
        
        function stop() {
            running = false;
            document.getElementById('startBtn').style.display = 'block';
            document.getElementById('stopBtn').style.display = 'none';
            updateStatus('Stopped', 'connected');
            log('‚è∏Ô∏è Scanner parado', 'info');
        }
        
        async function scan() {
            const pairs = [
                { from: TOKENS.WETH, to: TOKENS.USDC },
                { from: TOKENS.WETH, to: TOKENS.USDT },
                { from: TOKENS.USDC, to: TOKENS.USDT },
                { from: TOKENS.ARB, to: TOKENS.WETH },
                { from: TOKENS.ARB, to: TOKENS.USDC }
            ];
            
            while (running) {
                try {
                    for (const pair of pairs) {
                        if (!running) break;
                        
                        scanCount++;
                        document.getElementById('scans').textContent = scanCount;
                        
                        await analyzePair(pair.from, pair.to);
                        
                        await sleep(3000);
                    }
                    
                    await sleep(5000);
                    
                } catch (e) {
                    log('‚ö†Ô∏è ' + e.message, 'error');
                    await sleep(10000);
                }
            }
        }
        
        async function analyzePair(token0, token1) {
            showAI(`Analisando ${token0.symbol}/${token1.symbol}...`);
            
            const amount = parseFloat(document.getElementById('amount').value);
            const amountIn = web3.utils.toWei(amount.toString(), 'ether');
            
            try {
                // Path Uniswap: token0 -> token1
                const pathUni = encodePath([token0.addr, token1.addr], [3000]);
                const outUni = await quoter.methods.quoteExactInput(pathUni, amountIn).call();
                
                await sleep(500);
                
                // Path Sushi (simula√ß√£o - na real precisa chamar o router do Sushi)
                // Para simplificar, vou simular uma pequena diferen√ßa
                const outSushi = (BigInt(outUni) * BigInt(10015)) / BigInt(10000); // +0.15% simulado
                
                // Calcular spread
                const diff = Number(outSushi - BigInt(outUni));
                const spread = (diff / Number(outUni)) * 100;
                
                const minProfit = parseFloat(document.getElementById('minProfit').value);
                
                if (spread > minProfit) {
                    const profitEth = (amount * spread) / 100;
                    
                    const opp = {
                        pair: `${token0.symbol}/${token1.symbol}`,
                        dex1: 'Uniswap V3',
                        dex2: 'Sushiswap',
                        spread: spread,
                        profit: profitEth,
                        amount: amount,
                        token0: token0,
                        token1: token1,
                        price1: Number(outUni),
                        price2: Number(outSushi)
                    };
                    
                    displayOpp(opp);
                    oppCount++;
                    document.getElementById('opps').textContent = oppCount;
                    
                    log(`üíé ${opp.pair} ‚Ä¢ ${spread.toFixed(2)}% ‚Ä¢ +${profitEth.toFixed(4)} ETH`, 'success');
                }
                
                hideAI();
                
            } catch (e) {
                hideAI();
                log(`‚ö†Ô∏è Erro em ${token0.symbol}/${token1.symbol}: ${e.message}`, 'error');
            }
        }
        
        function encodePath(tokens, fees) {
            let path = '0x';
            for (let i = 0; i < tokens.length; i++) {
                path += tokens[i].substring(2);
                if (i < fees.length) {
                    path += fees[i].toString(16).padStart(6, '0');
                }
            }
            return path;
        }
        
        function displayOpp(o) {
            const list = document.getElementById('oppsList');
            
            const card = document.createElement('div');
            card.className = 'opp-card';
            card.innerHTML = `
                <div class="opp-top">
                    <div class="profit">+${o.profit.toFixed(4)} ETH</div>
                    <div class="percentage">${o.spread.toFixed(2)}%</div>
                </div>
                <div class="route">
                    <span class="route-item">${o.pair}</span>
                    <span class="arrow">‚Üí</span>
                    <span class="route-item">${o.dex1}</span>
                    <span class="arrow">‚Üí</span>
                    <span class="route-item">${o.dex2}</span>
                </div>
                <div class="details">
                    <div class="detail">
                        <div class="detail-label">Loan</div>
                        <div class="detail-value">${o.amount} ETH</div>
                    </div>
                    <div class="detail">
                        <div class="detail-label">Spread</div>
                        <div class="detail-value">${o.spread.toFixed(3)}%</div>
                    </div>
                </div>
                <button class="btn btn-success" onclick='execute(${JSON.stringify(o)})'>
                    ‚ö° Execute Now
                </button>
            `;
            
            list.insertBefore(card, list.firstChild);
            
            while (list.children.length > 3) {
                list.removeChild(list.lastChild);
            }
        }
        
        async function execute(opp) {
            try {
                log('‚ö° Executando arbitragem...', 'info');
                updateStatus('Executing...', 'scanning');
                
                const amountWei = web3.utils.toWei(opp.amount.toString(), 'ether');
                
                const params = web3.eth.abi.encodeParameters(
                    ['address', 'address', 'address', 'address', 'uint256'],
                    [
                        UNI_ROUTER,
                        SUSHI_ROUTER,
                        opp.token0.addr,
                        opp.token1.addr,
                        web3.utils.toWei('0.001', 'ether')
                    ]
                );
                
                const gas = await contract.methods.startFlashloan(
                    opp.token0.addr,
                    amountWei,
                    params
                ).estimateGas({ from: account });
                
                const gasPrice = await web3.eth.getGasPrice();
                
                log(`üìä Gas: ${gas} ‚Ä¢ Price: ${web3.utils.fromWei(gasPrice, 'gwei')} Gwei`, 'info');
                
                const tx = await contract.methods.startFlashloan(
                    opp.token0.addr,
                    amountWei,
                    params
                ).send({
                    from: account,
                    gas: Math.floor(Number(gas) * 1.2),
                    gasPrice: gasPrice
                });
                
                log(`‚úÖ TX: ${tx.transactionHash}`, 'success');
                log(`üîó https://arbiscan.io/tx/${tx.transactionHash}`, 'info');
                
                updateStatus('Success!', 'connected');
                
                totalProfit += opp.profit;
                document.getElementById('profits').textContent = '$' + (totalProfit * 2500).toFixed(0);
                
                setTimeout(() => updateStatus('Scanning...', 'scanning'), 3000);
                
            } catch (e) {
                log(`‚ùå ${e.message}`, 'error');
                updateStatus('Error', 'error');
                setTimeout(() => updateStatus('Scanning...', 'scanning'), 3000);
            }
        }
        
        function updateStatus(text, type) {
            const s = document.getElementById('status');
            s.innerHTML = `<span class="pulse">‚óè</span> ${text}`;
            s.className = `status ${type}`;
        }
        
        function showAI(text) {
            const ai = document.getElementById('aiPanel');
            document.getElementById('aiText').textContent = text;
            ai.classList.add('active');
        }
        
        function hideAI() {
            document.getElementById('aiPanel').classList.remove('active');
        }
        
        function log(msg, type = '') {
            const logs = document.getElementById('logs');
            const e = document.createElement('div');
            e.className = `log-entry ${type}`;
            e.textContent = `[${new Date().toLocaleTimeString()}] ${msg}`;
            logs.insertBefore(e, logs.firstChild);
            
            while (logs.children.length > 30) {
                logs.removeChild(logs.lastChild);
            }
        }
        
        function sleep(ms) {
            return new Promise(r => setTimeout(r, ms));
        }
        
        if (window.ethereum) {
            window.ethereum.on('accountsChanged', () => location.reload());
            window.ethereum.on('chainChanged', () => location.reload());
        }
    </script>
